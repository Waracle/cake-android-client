<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cake_container_height"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/image"
      android:layout_width="@dimen/cake_image_width"
      android:layout_height="match_parent"
      android:contentDescription="@string/cake_image_description"
      android:scaleType="centerCrop"
      tools:background="#C0C0C0"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/image"
      android:layout_toRightOf="@+id/image"
      android:orientation="vertical"
      android:padding="@dimen/cake_description_container_padding"
      tools:background="#717171"
      >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/cake_title_size"
        tools:text="Sample title"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sample description"
        />

  </LinearLayout>

</RelativeLayout>